<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 10 } %>
    <%= f.input :editing, as: :radio_buttons, collection_wrapper_tag: :div, collection_wrapper_class: 'radio-group' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
